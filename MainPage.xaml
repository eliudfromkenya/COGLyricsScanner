<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COGLyricsScanner.MainPage">

    <!-- Live Background with Animated Gradient -->
    <Grid>
        <Border Style="{StaticResource LiveGradientBackground}" />
        
        <!-- Floating Particles Background -->
        <Grid>
            <Border Style="{StaticResource FloatingParticleStyle}" 
                    HorizontalOptions="Start" VerticalOptions="Start" 
                    Margin="50,100" />
            <Border Style="{StaticResource FloatingParticleStyle}" 
                    HorizontalOptions="End" VerticalOptions="Start" 
                    Margin="50,200" />
            <Border Style="{StaticResource FloatingParticleStyle}" 
                    HorizontalOptions="Center" VerticalOptions="Center" 
                    Margin="0,50" />
            <Border Style="{StaticResource FloatingParticleStyle}" 
                    HorizontalOptions="Start" VerticalOptions="End" 
                    Margin="100,50" />
            <Border Style="{StaticResource FloatingParticleStyle}" 
                    HorizontalOptions="End" VerticalOptions="End" 
                    Margin="80,100" />
        </Grid>
        
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="35">
                
                <!-- Animated Welcome Card -->
                <Border Style="{StaticResource BreathingCardStyle}"
                        Padding="20"
                        Margin="0,20">
                    <VerticalStackLayout Spacing="20">
                        <!-- Floating Bot Image -->
                        <Border Style="{StaticResource FloatingAnimation}"
                                BackgroundColor="Transparent"
                                Padding="0">
                            <Image
                                Source="dotnet_bot.png"
                                HeightRequest="185"
                                Aspect="AspectFit"
                                SemanticProperties.Description="dot net bot in a hovercraft number nine" />
                        </Border>

                        <!-- Pulsing Title -->
                        <Border Style="{StaticResource PulsingIconStyle}"
                                BackgroundColor="Transparent"
                                Padding="0">
                            <Label
                                Text="Hello, World!"
                                Style="{StaticResource Headline}"
                                SemanticProperties.HeadingLevel="Level1"
                                HorizontalOptions="Center" />
                        </Border>

                        <!-- Floating Subtitle -->
                        <Label
                            Text="Welcome to &#10;.NET Multi-platform App UI"
                            Style="{StaticResource FloatingLabelStyle}"
                            SemanticProperties.HeadingLevel="Level2"
                            SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Interactive Button with Magnetic Effect -->
                <Button
                    x:Name="CounterBtn"
                    Text="Click me" 
                    Style="{StaticResource MagneticButtonStyle}"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Fill"
                    Margin="20,10" />
                    
                <!-- Live Update Indicator -->
                <StackLayout Orientation="Horizontal" 
                           HorizontalOptions="Center"
                           Spacing="10"
                           Margin="0,20">
                    <Border Style="{StaticResource LiveUpdateIndicatorStyle}" />
                    <Label Text="Live Animations Active"
                           Style="{StaticResource FloatingLabelStyle}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                </StackLayout>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
