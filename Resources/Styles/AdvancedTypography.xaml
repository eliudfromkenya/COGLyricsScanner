<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Dynamic Font Sizes -->
    <x:Double x:Key="DisplayLargeSize">57</x:Double>
    <x:Double x:Key="DisplayMediumSize">45</x:Double>
    <x:Double x:Key="DisplaySmallSize">36</x:Double>
    <x:Double x:Key="HeadlineLargeSize">32</x:Double>
    <x:Double x:Key="HeadlineMediumSize">28</x:Double>
    <x:Double x:Key="HeadlineSmallSize">24</x:Double>
    <x:Double x:Key="TitleLargeSize">22</x:Double>
    <x:Double x:Key="TitleMediumSize">16</x:Double>
    <x:Double x:Key="TitleSmallSize">14</x:Double>
    <x:Double x:Key="BodyLargeSize">16</x:Double>
    <x:Double x:Key="BodyMediumSize">14</x:Double>
    <x:Double x:Key="BodySmallSize">12</x:Double>
    <x:Double x:Key="LabelLargeSize">14</x:Double>
    <x:Double x:Key="LabelMediumSize">12</x:Double>
    <x:Double x:Key="LabelSmallSize">11</x:Double>

    <!-- Display Typography Styles -->
    <Style x:Key="DisplayLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource DisplayLargeSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.12" />
        <Setter Property="CharacterSpacing" Value="-0.25" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="DisplayMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource DisplayMediumSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.16" />
        <Setter Property="CharacterSpacing" Value="0" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="DisplaySmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource DisplaySmallSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.22" />
        <Setter Property="CharacterSpacing" Value="0" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <!-- Headline Typography Styles -->
    <Style x:Key="HeadlineLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource HeadlineLargeSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="CharacterSpacing" Value="0" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="HeadlineMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource HeadlineMediumSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.29" />
        <Setter Property="CharacterSpacing" Value="0" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="HeadlineSmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource HeadlineSmallSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <!-- Title Typography Styles -->
    <Style x:Key="TitleLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource TitleLargeSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.27" />
        <Setter Property="CharacterSpacing" Value="0" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="TitleMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource TitleMediumSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="CharacterSpacing" Value="0.15" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="TitleSmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource TitleSmallSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.1" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <!-- Body Typography Styles -->
    <Style x:Key="BodyLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource BodyLargeSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="CharacterSpacing" Value="0.5" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="BodyMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource BodyMediumSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.25" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="BodySmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource BodySmallSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <!-- Label Typography Styles -->
    <Style x:Key="LabelLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource LabelLargeSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.1" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="LabelMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource LabelMediumSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.5" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="LabelSmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource LabelSmallSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.45" />
        <Setter Property="CharacterSpacing" Value="0.5" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <!-- Specialized Typography Styles -->
    <Style x:Key="HymnTitleStyle" TargetType="Label" BasedOn="{StaticResource TitleLargeStyle}">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptivePrimary}" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <Style x:Key="HymnNumberStyle" TargetType="Label" BasedOn="{StaticResource LabelMediumStyle}">
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurfaceVariant}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="HymnAuthorStyle" TargetType="Label" BasedOn="{StaticResource BodySmallStyle}">
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurfaceVariant}" />
        <Setter Property="FontAttributes" Value="Italic" />
    </Style>

    <Style x:Key="StatisticNumberStyle" TargetType="Label" BasedOn="{StaticResource HeadlineMediumStyle}">
        <Setter Property="TextColor" Value="{DynamicResource AdaptivePrimary}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style x:Key="StatisticLabelStyle" TargetType="Label" BasedOn="{StaticResource LabelSmallStyle}">
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurfaceVariant}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <!-- Dynamic Font Scaling Styles -->
    <Style x:Key="ResponsiveHeadlineStyle" TargetType="Label">
        <Setter Property="FontSize">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS" Value="{StaticResource HeadlineLargeSize}" />
                    <On Platform="Android" Value="{StaticResource HeadlineMediumSize}" />
                    <On Platform="WinUI" Value="{StaticResource HeadlineLargeSize}" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="ResponsiveBodyStyle" TargetType="Label">
        <Setter Property="FontSize">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS" Value="{StaticResource BodyLargeSize}" />
                    <On Platform="Android" Value="{StaticResource BodyMediumSize}" />
                    <On Platform="WinUI" Value="{StaticResource BodyLargeSize}" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <!-- Accessibility Enhanced Styles -->
    <Style x:Key="AccessibleHeadlineStyle" TargetType="Label" BasedOn="{StaticResource HeadlineLargeStyle}">
        <Setter Property="FontSize" Value="{StaticResource HeadlineLargeSize}" />
        <Setter Property="LineHeight" Value="1.4" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <Style x:Key="AccessibleBodyStyle" TargetType="Label" BasedOn="{StaticResource BodyLargeStyle}">
        <Setter Property="FontSize" Value="{StaticResource BodyLargeSize}" />
        <Setter Property="LineHeight" Value="1.6" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <!-- Button Typography Styles -->
    <Style x:Key="ButtonTextLargeStyle" TargetType="Button">
        <Setter Property="FontSize" Value="{StaticResource LabelLargeSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CharacterSpacing" Value="0.1" />
    </Style>

    <Style x:Key="ButtonTextMediumStyle" TargetType="Button">
        <Setter Property="FontSize" Value="{StaticResource LabelMediumSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <Style x:Key="ButtonTextSmallStyle" TargetType="Button">
        <Setter Property="FontSize" Value="{StaticResource LabelSmallSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <!-- Entry and Editor Typography Styles -->
    <Style x:Key="InputTextStyle" TargetType="Entry">
        <Setter Property="FontSize" Value="{StaticResource BodyLargeSize}" />
        <Setter Property="CharacterSpacing" Value="0.5" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <Style x:Key="MultilineInputTextStyle" TargetType="Editor">
        <Setter Property="FontSize" Value="{StaticResource BodyLargeSize}" />
        <Setter Property="CharacterSpacing" Value="0.5" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

    <!-- Picker Typography Style -->
    <Style x:Key="PickerTextStyle" TargetType="Picker">
        <Setter Property="FontSize" Value="{StaticResource BodyMediumSize}" />
        <Setter Property="TextColor" Value="{DynamicResource AdaptiveOnSurface}" />
    </Style>

</ResourceDictionary>

