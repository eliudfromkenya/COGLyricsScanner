<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="ColorShiftingGradientsStyle" TargetType="ContentView">
        <Setter Property="BackgroundColor" Value="{StaticResource AdaptiveBackgroundBrush}"/>
    </Style>

    <!-- Dynamic Sunset Gradient Style -->
    <Style x:Key="DynamicSunsetGradient" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeShape" Value="Rectangle"/>
    </Style>

</ResourceDictionary>
