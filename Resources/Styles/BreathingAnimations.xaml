<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Breathing Animation Styles (MAUI Compatible) -->
    <!-- Note: MAUI uses visual state changes and property animations instead of Storyboards -->

    <!-- Breathing Card Style for Border -->
    <Style x:Key="BreathingCardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
        <Setter Property="Stroke" Value="{StaticResource Primary}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource Primary}"
                       Offset="0,4"
                       Radius="15"
                       Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <!-- Triggers removed - animations not compatible with MAUI -->
    </Style>

    <!-- Breathing Card Style for Border -->
    <Style x:Key="BreathingCardFrameStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
        <Setter Property="Stroke" Value="{StaticResource Primary}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource Primary}"
                       Offset="0,4"
                       Radius="15"
                       Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Breathing Button Style -->
    <Style x:Key="BreathingButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <!-- Triggers removed - animations not compatible with MAUI -->
    </Style>

    <!-- Heartbeat Icon Style -->
    <Style x:Key="HeartbeatIconStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="MaterialIconsRegular"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <!-- Triggers removed - animations not compatible with MAUI -->
    </Style>

    <!-- Breathing List Item Style -->
    <Style x:Key="BreathingListItemStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
        <Setter Property="Stroke" Value="{StaticResource Primary}"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource Primary}"
                       Offset="0,2"
                       Radius="8"
                       Opacity="0.3"/>
            </Setter.Value>
        </Setter>
        <!-- Triggers removed - animations not compatible with MAUI -->
    </Style>

    <!-- Breathing Container Style -->
    <Style x:Key="BreathingContainerStyle" TargetType="ContentView">
        <Setter Property="BackgroundColor" Value="{StaticResource AdaptiveBackgroundBrush}"/>
        <!-- Triggers removed - animations not compatible with MAUI -->
    </Style>

    <!-- Pulsing Accent Style -->
    <Style x:Key="PulsingAccentStyle" TargetType="Ellipse">
        <Setter Property="Fill" Value="{StaticResource Primary}"/>
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="WidthRequest" Value="8"/>
        <Setter Property="HeightRequest" Value="8"/>
        <!-- Triggers removed - animations not compatible with MAUI -->
    </Style>

    <!-- Pulsing Icon Style -->
    <Style x:Key="PulsingIconStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
        <Setter Property="Stroke" Value="{StaticResource Primary}"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource Primary}"
                       Offset="0,3"
                       Radius="12"
                       Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <!-- Triggers removed - animations not compatible with MAUI -->
    </Style>

</ResourceDictionary>