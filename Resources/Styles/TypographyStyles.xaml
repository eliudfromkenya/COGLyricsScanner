<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Display Typography Styles -->
    <Style x:Key="DisplayLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="57" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.12" />
        <Setter Property="CharacterSpacing" Value="-0.25" />
    </Style>

    <Style x:Key="DisplayMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="45" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.16" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="DisplaySmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.22" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <!-- Headline Typography Styles -->
    <Style x:Key="HeadlineLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="HeadlineMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.29" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="HeadlineSmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <!-- Title Typography Styles -->
    <Style x:Key="TitleLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.27" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="TitleMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="CharacterSpacing" Value="0.15" />
    </Style>

    <Style x:Key="TitleSmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.1" />
    </Style>

    <!-- Label Typography Styles -->
    <Style x:Key="LabelLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.1" />
    </Style>

    <Style x:Key="LabelMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <Style x:Key="LabelSmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.45" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <!-- Body Typography Styles -->
    <Style x:Key="BodyLargeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="CharacterSpacing" Value="0.15" />
    </Style>

    <Style x:Key="BodyMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.25" />
    </Style>

    <Style x:Key="BodySmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
    </Style>

    <!-- Specialized Typography Styles -->
    <Style x:Key="CaptionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurfaceVariant}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
    </Style>

    <Style x:Key="OverlineStyle" TargetType="Label">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurfaceVariant}" />
        <Setter Property="LineHeight" Value="1.6" />
        <Setter Property="CharacterSpacing" Value="1.5" />
        <Setter Property="Text" Value="{Binding Text, Converter={StaticResource StringToUpperConverter}}" />
    </Style>

    <!-- Interactive Typography Styles -->
    <Style x:Key="LinkTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptivePrimary}" />
        <Setter Property="TextDecorations" Value="Underline" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.25" />
    </Style>

    <Style x:Key="ButtonTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnPrimary}" />
        <Setter Property="LineHeight" Value="1.43" />
        <Setter Property="CharacterSpacing" Value="0.1" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Semantic Typography Styles -->
    <Style x:Key="ErrorTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource Error}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
    </Style>

    <Style x:Key="SuccessTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource Success}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
    </Style>

    <Style x:Key="WarningTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource Warning}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
    </Style>

    <!-- Responsive Typography Styles -->
    <Style x:Key="ResponsiveHeadlineStyle" TargetType="Label">
        <Setter Property="FontSize">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS, Android" Value="24" />
                    <On Platform="WinUI" Value="28" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.29" />
    </Style>

    <Style x:Key="ResponsiveBodyStyle" TargetType="Label">
        <Setter Property="FontSize">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS, Android" Value="14" />
                    <On Platform="WinUI" Value="16" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.43" />
    </Style>

    <!-- Accessibility Enhanced Typography -->
    <Style x:Key="AccessibleHeadlineStyle" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.4" />
        <Setter Property="CharacterSpacing" Value="0.1" />
        <Setter Property="SemanticProperties.HeadingLevel" Value="Level1" />
    </Style>

    <Style x:Key="AccessibleBodyStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="LineHeight" Value="1.6" />
        <Setter Property="CharacterSpacing" Value="0.15" />
    </Style>

    <!-- Monospace Typography for Code -->
    <Style x:Key="MonospaceStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="Courier New" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource AdaptiveOnSurface}" />
        <Setter Property="BackgroundColor" Value="{StaticResource GlassUltraLight}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>

</ResourceDictionary>

