<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="Primary">#2E7D32</Color>
    <Color x:Key="PrimaryDark">#1B5E20</Color>
    <Color x:Key="PrimaryLight">#4CAF50</Color>
    <Color x:Key="Secondary">#1976D2</Color>
    <Color x:Key="SecondaryDark">#0D47A1</Color>
    <Color x:Key="SecondaryLight">#42A5F5</Color>
    <Color x:Key="Tertiary">#81C784</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- Light Theme -->
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightSurface">#F8F9FA</Color>
    <Color x:Key="LightSurfaceVariant">#E8F5E8</Color>
    <Color x:Key="LightOnBackground">#212121</Color>
    <Color x:Key="LightOnSurface">#424242</Color>
    <Color x:Key="LightOnPrimary">#FFFFFF</Color>
    <Color x:Key="LightOnSecondary">#FFFFFF</Color>
    <Color x:Key="LightOutline">#E0E0E0</Color>
    <Color x:Key="LightShadow">#00000020</Color>

    <!-- Dark Theme -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkSurface">#1E1E1E</Color>
    <Color x:Key="DarkSurfaceVariant">#2E3B2E</Color>
    <Color x:Key="DarkOnBackground">#FFFFFF</Color>
    <Color x:Key="DarkOnSurface">#E0E0E0</Color>
    <Color x:Key="DarkOnPrimary">#000000</Color>
    <Color x:Key="DarkOnSecondary">#000000</Color>
    <Color x:Key="DarkOutline">#424242</Color>
    <Color x:Key="DarkShadow">#00000040</Color>

    <!-- Dynamic Colors (will change based on theme) -->
    <!-- Note: AppThemeBinding for Color resources is handled in code-behind or through styles -->
    <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F8F9FA</Color>
    <Color x:Key="SurfaceVariantColor">#E8F5E8</Color>
    <Color x:Key="OnBackgroundColor">#212121</Color>
    <Color x:Key="OnSurfaceColor">#424242</Color>
    <Color x:Key="OnPrimaryColor">#FFFFFF</Color>
    <Color x:Key="OnSecondaryColor">#FFFFFF</Color>
    <Color x:Key="OutlineColor">#E0E0E0</Color>
    <Color x:Key="ShadowColor">#00000020</Color>

    <!-- Gradient Colors -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
        <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SurfaceGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource SurfaceColor}" Offset="0.0" />
        <GradientStop Color="{StaticResource SurfaceVariantColor}" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>