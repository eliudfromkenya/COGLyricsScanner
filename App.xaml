<?xml version="1.0" encoding="UTF-8" ?>
<Application x:Class="COGLyricsScanner.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:COGLyricsScanner"
             xmlns:converters="clr-namespace:COGLyricsScanner.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/BreathingAnimations.xaml" />
                <ResourceDictionary Source="Resources/Styles/ColorShiftingGradients.xaml" />
                <ResourceDictionary Source="Resources/Styles/LiveBackgrounds.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Essential Value Converters -->
            <converters:BoolToFavoriteIconConverter x:Key="BoolToFavoriteIconConverter" />
            <converters:BoolToFavoriteColorConverter x:Key="BoolToFavoriteColorConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:DateTimeToVisibilityConverter x:Key="DateTimeToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>